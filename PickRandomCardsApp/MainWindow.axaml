<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PickRandomCardsApp.MainWindow"
        Title="Card Picker">
    <StackPanel>
        <TextBox x:Name="CardCountInput"
                 Watermark="Enter number of cards"
                 HorizontalAlignment="Center"
                 Margin="0,20,0,0"/>
        <Button Content="Pick Cards"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="PickCards_Click"/>
        <TextBlock x:Name="DisplayText"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
    </StackPanel>
</Window>